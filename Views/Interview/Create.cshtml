@model Interview

@{
    ViewData["Title"] = "Создание интервью";
}

<form asp-area="" asp-controller="Interview" asp-action="Create" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center mb-0">Создать интервью</h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label>Название:</label>
                            <input asp-for="Title" class="form-control" type="text" placeholder="Введите название" required>
                            <span></span>
                        </div>

                        <div class="form-group">
                            <label>Дата начала:</label>
                            <input asp-for="StartDate" class="form-control" type="datetime-local" required>
                            <span></span>
                        </div>

                        <div class="form-group">
                            <label>Дата окончания:</label>
                            <input asp-for="EndDate" class="form-control" type="datetime-local" required>
                            <span></span>
                        </div>

                        <div class="form-group text-center">
                            <button class="btn btn-primary w-100" type="submit">Создать</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>