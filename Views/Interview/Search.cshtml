@model Interview

@{
    ViewData["Title"] = "Результаты поиска";
}

<table class="table">
    <thead>
        <tr>
            <th>ID интервью</th>
            <th>Название интервью</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.InterviewId</td>
            <td>@Model.Title</td>
            <td>@Model.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
            <td>@Model.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
            
            @if (DateTime.Now < Model.StartDate)
            {
                <td><a asp-controller="Chat" asp-action="Room" class="link-primary">Скоро будет доступно</a></td>
            }
            else
            {
                <td><a asp-controller="Chat" asp-action="Room" class="link-primary">Присоединиться к интервью</a></td>
            }

        </tr>
    </tbody>
</table>