@model RegistrationViewModel


@{
    ViewData["Title"] = "Регистрация";
}


<form asp-area="" asp-controller="Account" asp-action="Registration" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center mb-0">Создайте учётную запись</h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>

                        <div class="form-group">
                            <label for="UserLogin">Логин:</label>
                            <input class="form-control" type="text" asp-for="UserLogin" placeholder="Введите логин" required>
                            <span asp-validation-for="UserLogin"></span>
                        </div>

                        <div class="form-group">
                            <label for="Email">Эл. почта:</label>
                            <input class="form-control" type="email" asp-for="Email" placeholder="Введите адрес эл. почты" required>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-group">
                            <label for="Password">Пароль:</label>
                            <input class="form-control" type="password" autocomplete="on" asp-for="Password" placeholder="Введите пароль" required>
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group">
                            <label for="PasswordConfirmation">Повторите пароль:</label>
                            <input class="form-control" type="password" autocomplete="on" asp-for="PasswordConfirmation" placeholder="Введите пароль еще раз" required>
                            <span asp-validation-for="PasswordConfirmation"></span>
                        </div>

                        <div class="form-group text-center">
                            <button class="btn btn-primary w-100" type="submit">Зарегистрироваться</button>
                        </div>
                        <div class="form-group text-center">
                            <a asp-controller="Account" asp-action="Login" class="forget">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>